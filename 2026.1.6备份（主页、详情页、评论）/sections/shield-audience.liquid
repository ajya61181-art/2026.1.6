        <p class="shield-audience-card-desc">{{ section.settings.audience_2_desc | default: "Have your cake and eat it too. Satisfy your sweet tooth while keeping your metabolism on your side." }}</p>
        <span class="shield-audience-checkmark">‚úì</span>
      </div>
      
      <!-- Audience 3 -->
