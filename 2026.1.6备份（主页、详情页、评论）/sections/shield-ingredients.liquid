<style>
  .shield-ingredients-section {
    background: #f8f8f8;
    padding: 80px 0;
  }
  
  .shield-ingredients-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .shield-ingredients-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .shield-ingredients-eyebrow {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #4CAF50;
    margin-bottom: 15px;
  }
  
  .shield-ingredients-title {
    font-family: 'Georgia', serif;
    font-size: 42px;
    font-weight: 400;
    font-style: italic;
    color: #000000;
    margin-bottom: 15px;
  }
  
  @media (max-width: 768px) {
    .shield-ingredients-title {
      font-size: 28px;
    }
  }
  
  .shield-ingredients-subtitle {
    font-size: 16px;
    color: #666666;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .shield-ingredients-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 25px;
  }
  
  @media (max-width: 992px) {
    .shield-ingredients-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 576px) {
    .shield-ingredients-grid {
      grid-template-columns: 1fr;
      max-width: 350px;
      margin: 0 auto;
    }
  }
  
  .shield-ingredient-card {
    background: #ffffff;
    border-radius: 20px;
    padding: 35px 25px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #e0e0e0;
  }
  
  .shield-ingredient-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }
  
  .shield-ingredient-icon {
    width: 70px;
    height: 70px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, #D4FF00 0%, #B8E986 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
  }
  
  .shield-ingredient-name {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #000000;
    margin-bottom: 10px;
  }
  
  .shield-ingredient-amount {
    font-size: 24px;
    font-weight: 700;
    color: #4CAF50;
    margin-bottom: 10px;
  }
  
  .shield-ingredient-desc {
    font-size: 13px;
    color: #666666;
    line-height: 1.5;
  }
  
  .shield-ingredient-role {
    display: inline-block;
    margin-top: 15px;
    background: #E8F5E9;
    color: #2E7D32;
    padding: 6px 14px;
    border-radius: 50px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Supplement Facts Box */
  .shield-supplement-facts {
    margin-top: 60px;
    background: #ffffff;
    border-radius: 20px;
    padding: 40px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    border: 2px solid #000000;
  }
  
  .shield-supplement-facts-title {
    font-size: 24px;
    font-weight: 700;
    text-transform: uppercase;
    border-bottom: 10px solid #000000;
    padding-bottom: 5px;
    margin-bottom: 15px;
  }
  
  .shield-supplement-facts-serving {
    font-size: 13px;
    color: #333333;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .shield-supplement-facts-row {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #e0e0e0;
    font-size: 14px;
  }
  
  .shield-supplement-facts-row:last-child {
    border-bottom: none;
  }
  
  .shield-supplement-facts-row .name {
    font-weight: 500;
  }
  
  .shield-supplement-facts-row .amount {
    font-weight: 600;
  }
  
  .shield-supplement-facts-row .dv {
    font-weight: 700;
    color: #4CAF50;
  }
  
  .shield-supplement-facts-matrix {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 8px;
    margin: 15px 0;
  }
  
  .shield-supplement-facts-matrix-title {
    font-weight: 700;
    margin-bottom: 10px;
  }
  
  .shield-supplement-facts-matrix-item {
    font-size: 13px;
    color: #666666;
    padding: 5px 0 5px 15px;
  }
</style>

